<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/appbg"
    tools:context=".Splash_Screen" >

    <RelativeLayout
        android:id="@+id/regtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff571f"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/ch_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="SHOFAR CHRISTIAN CHURCH"
            android:textColor="#fdf8f8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ch_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch_txt"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:text="CONNECT DATABASE"
            android:textColor="#fdf8f8"
            android:textSize="50sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="4" >
        
        <RelativeLayout
        android:id="@+id/regtitle"
        android:layout_width="5dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="#ff571f">

        <ImageView
            android:id="@+id/logoimage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
			android:layout_weight="1"
			android:layout_centerInParent="true"
            android:background="@drawable/logo" />
		</RelativeLayout>
        <ImageView
            android:id="@+id/login"
            android:layout_width="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/nsigin" />

        <ImageView
            android:id="@+id/register"
            android:layout_width="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/nregister" />

        <ImageView
            android:id="@+id/logoimage2"
            android:layout_width="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/logo2" />
    </LinearLayout>

</RelativeLayout>